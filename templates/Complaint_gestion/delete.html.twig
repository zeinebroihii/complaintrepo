{# templates/complaint/delete.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Complaint</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #153462;
            margin-bottom: 20px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            background-color: #dc3545;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease-in-out;
            margin-right: 10px;
        }

        .btn:hover {
            background-color: #c82333;
        }

        form {
            margin-top: 20px;
        }

        p {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Complaint</h2>
        <p>Are you sure you want to delete this complaint?</p>
        <form action="{{ path('complaint_delete', {'id': complaint.id}) }}" method="post">
            <button type="submit" class="btn">Delete</button>
            <a href="{{ path('complaint_list', {'id': id}) }}" class="btn">Cancel</a>
        </form>
    </div>
</body>
</html>
